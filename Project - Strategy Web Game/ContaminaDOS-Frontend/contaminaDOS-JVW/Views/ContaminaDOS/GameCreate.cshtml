@model contaminaDOS_JVW.Models.Server

@{
    ViewData["Title"] = "GameCreate";
}

<head>
    <title>New Room</title>
    <link rel="stylesheet" href="./newRoom.css">
</head>

<div class="card-container">
    <card class="room-card">
        <form asp-controller="ContaminaDOS" asp-action="GameCreate" method="post">
            <div class="form-group">
                <label class="control-label">Room name</label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Room owner</label>
                <input name="owner" class="form-control" />
            </div>
            <div class="ex3">
                <label for="item">Do you want to use password?</label>
                <input type="checkbox" name="one" id="item">
                <div class="hide" style="height:auto">
                    <label class="control-label">Password</label>
                    <input name="password" type="password" class="form-control" data-val="false" value=""/>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" id="serverInput" name="server" value="@Model.server" placeholder="Game server">
            </div>
            <div class="form-group">
                <button type="submit" class="create-button btn btn-outline-primary" style="width: 100%">Create room</button>
            </div>
        </form>
    </card>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}